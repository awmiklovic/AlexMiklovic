//- layout.pug
include ./includes/mixins.pug

html
	head
		title Alex Miklovic
		meta(name='viewport' content='width=device-width, initial-scale=1')
		script(src='http://code.jquery.com/jquery-3.3.1.min.js')
		script(src='https://unpkg.com/flipping@latest/dist/flipping.gsap.js')
		script(src='js/barba.js')
		script(src='js/main.js')
		link(rel='icon', href='/images/favicon.png')
		link(rel='stylesheet', href='/css/main.css')
	body
		block scripts
		include includes/nav.pug
		#name
			#bio(data-flip-key="bio")
				p(class="vaporize") Alex Miklovic makes cool things for the web. If you're a graphic design or web development studio seeking to push the boundaries of website design, please drop me a line here!
				p(class="vaporize") T +619 780 2839 / awmiklovic@gmail.com
			//- A
			img(class="name-letter" src="/images/slice1.svg" data-flip-key="A1")
			//- Laguna Art Museum
			div(class="name-letter portfolio" data-flip-key="laguna")
				a(href="/laf.html")
					h2 Laguna Art Museum
					img(src="/images/laf.jpg")
				div(class="cover")
			//- Fix MFG
			div(class="name-letter portfolio" data-flip-key="fix")
				a(href="/fix.html")
					h2 FIX MFG
					img(src="/images/fix.jpg")
